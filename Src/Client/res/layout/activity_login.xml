<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/btn_get_captcha"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/lgCreateBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/loginbtnbg"
        android:text="Login" />

    <EditText
        android:id="@+id/descEdt"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/btn_get_captcha"
        android:layout_centerVertical="true"
        android:background="@drawable/textboxbg"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/loginImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/noteNameEdt"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/descEdt"
        android:layout_alignLeft="@+id/descEdt"
        android:layout_marginBottom="21dp"
        android:background="@drawable/textboxbg"
        android:ems="10"
        android:hint="User Name" />

    <TextView
        android:id="@+id/noteNameTv"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Create Account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/lgCreateBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/noteNameTv"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/noteNameTv"
        android:background="@drawable/create" />

</RelativeLayout>