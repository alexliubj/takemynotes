<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<RelativeLayout 
    android:background="@drawable/catebg"
    android:layout_width="wrap_content"
    android:layout_height="308dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserPanelActivity" >

    <ImageView
        android:id="@+id/upUserImgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user" />

    <EditText
        android:id="@+id/upNameEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upUserImgView"
        android:layout_below="@+id/upUserImgView"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/upEmailEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upNameEdt"
        android:layout_below="@+id/upNameEdt"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Email" />

    <EditText
        android:id="@+id/upAddressEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upEmailEdt"
        android:layout_below="@+id/upEmailEdt"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Address" />

    <TextView
        android:id="@+id/upDateRegisterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/upUserImgView"
        android:layout_marginRight="48dp"
        android:text="Register date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/upLastLoginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upDateRegisterTv"
        android:layout_below="@+id/upDateRegisterTv"
        android:layout_marginTop="26dp"
        android:text="Last login date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/upUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Update" />

</RelativeLayout>

<ListView
           android:dividerHeight="1dip" 
           android:id="@+id/note_comments"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="#00000000"
           android:cacheColorHint="#00000000"
           android:divider="#e0e0e0">
	     </ListView> 
</LinearLayout>
