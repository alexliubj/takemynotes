<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="308dp"
    android:background="@drawable/catebg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NoteDetailsActivity" >

    <ImageView
        android:id="@+id/noteDetailImg"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/note2" />

    <TextView
        android:id="@+id/ndContactTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/noteDetailImg"
        android:text="Atom"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/noteDetailImg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ndNoteNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ndContactTv"
        android:layout_alignTop="@+id/noteDetailImg"
        android:text="Note Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/ndDescTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ndNoteNameTv"
        android:layout_below="@+id/ndNoteNameTv"
        android:layout_marginTop="27dp"
        android:text="Note Description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/ndCommentBtn"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ndDescTv"
        android:text="Comment" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ndPriceTv"
        android:layout_alignBottom="@+id/ndPriceTv"
        android:layout_alignLeft="@+id/textView8"
        android:text="Price:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ndPhoneTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/noteDetailImg"
        android:text="6478886666"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ndPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ndCommentBtn"
        android:layout_alignLeft="@+id/ndEmailTv"
        android:text="$45.20"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ndEmailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ndPriceTv"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/noteDetailImg"
        android:text="takemynote@notes.com"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ndEmailTv"
        android:layout_alignBottom="@+id/ndEmailTv"
        android:layout_alignLeft="@+id/textView7"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="10dp"
        android:text="Phone:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"
        android:layout_alignLeft="@+id/noteDetailImg"
        android:layout_marginBottom="9dp"
        android:text="Contact:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/ndFavBtn"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ndNoteNameTv"
        android:layout_alignTop="@+id/ndCommentBtn"
        android:text="Favourite" />

</RelativeLayout>
       <ListView
           android:dividerHeight="1dip" 
           android:id="@+id/note_comments"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="#00000000"
           android:cacheColorHint="#00000000"
           android:divider="#e0e0e0">
	     </ListView> 
</LinearLayout>